{
  "nodemonConfig": {
    "ext": "cs",
    "quiet": true,
    "signal": "SIGTERM",
    "exec": "dotnet run || exit 1",
    "effects": {
      "start": "clear"
    },
    "events": {
      "start": "clear"
    }
  },
  "scripts": {
    "p": "cmd/publish.sh",
    "pr": "cmd/publish.sh && cmd/run-release.sh",
    "w": "cmd/watchapp.sh",
    "d": "nodemon"
  }
}
